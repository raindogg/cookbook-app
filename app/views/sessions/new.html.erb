<h1>Log in</h1>

<%= form_tag '/login', method: :post do %>
  <div>
    <%= label_tag :email %>
    <%= text_field_tag :email, nil, class: "entry" %>
  </div>
  <div>
    <%= label_tag :password %>
    <%= password_field_tag :password, nil, class: "entry" %>
  </div>
  <div>
    <%= submit_tag 'Chomp down' %>
  </div>
<% end %>